<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="subscription_mapper">
    <select id="getById" resultMap="subscription_map">
        SELECT *
        FROM subscriptions
        LEFT JOIN adress
        ON adresses.id=subscriptions.adressId
        LEFT JOIN contact
        ON contacts.id=subscriptions.contactId
        LEFT JOIN pricePlan
        ON pricePlans.id=subscriptions.pricePlanId
        LEFT JOIN training
        ON trainings.id=subscriptions.trainingId
        LEFT JOIN clients_subscriptions
        clients_subscriptions.subscriptionsId = subscriptions.id
        LEFT JOIN clients
        clients.id = clients_subscriptions.clientId
        WHERE subscriptions.id=#{id}
    </select>
    <select id="get" resultMap="author_map">
        SELECT *
        FROM subscriptions
        LEFT JOIN adress
        ON adresses.id=subscriptions.adressId
        LEFT JOIN contact
        ON contacts.id=subscriptions.contactId
        LEFT JOIN pricePlan
        ON pricePlans.id=subscriptions.pricePlanId
        LEFT JOIN training
        ON trainings.id=subscriptions.trainingId
        LEFT JOIN clients_subscriptions
        clients_subscriptions.subscriptionsId = subscriptions.id
        LEFT JOIN clients
        clients.id = clients_subscriptions.clientId

    </select>
    <delete id="deleteById">
        DELETE FROM subscriptions
        WHERE subscriptions.id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO subscriptions(name, adressId, contactId, pricePlanId, trainingId)
        VALUES(#{name}, #{adressId}, #{contactId}, #{pricePlanId}, #{trainingId})
    </insert>
    <update id="update">
        UPDATE subscriptions
        SET name=#{name},
        adressId=#{adressId},
        contactId=#{contactId},
        pricePlanId=#{pricePlanId},
        trainingId=#{trainingId}
        WHERE subscriptions.id=#{id}
    </update>

    <resultMap id="subscription_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Subscription"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="adress" column="adressId" resultMap="adress_mapper.adress_map"/>
        <collection property="contact" column="contactId" resultMap="contact_mapper.contact_map"/>
        <collection property="pricePlan" column="pricePlanId" resultMap="pricePlan_mapper.pricePlan_map"/>
        <collection property="training" column="trainingId" resultMap="training_mapper.training_map"/>
    </resultMap>
</mapper>
