<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="price_plan_mapper">
    <select id="getById" resultMap="price_plan_map">
        SELECT *
        FROM pricePlans
        LEFT JOIN dateRange
        ON dateRanges.id=pricePlans.dateRangeId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="price_plan_map">
        SELECT *
        FROM pricePlans
        LEFT JOIN dateRange
        ON dateRanges.id=pricePlans.dateRangeId
    </select>
    <delete id="deleteById">
        DELETE FROM pricePlans
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO pricePlans (name, nameDiscount, discount, dateRangeId)
        VALUES(#{name}, #{nameDiscount}, #{discount}, #{dateRangeId})
    </insert>
    <update id="update">
        UPDATE pricePlans
        SET name=#{name},
        nameDiscount=#{nameDiscount},
        discount=#{discount},
        dateRangeId=#{dateRangeId}
    </update>

    <resultMap id="price_plan_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.PricePlan"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="nameDiscount" column="nameDiscount"/>
        <result property="discount" column="discount"/>
        <collection property="dateRange" column="dateRangeId" resultMap="date_range_mapper.date_range_map"/>
    </resultMap>
</mapper>