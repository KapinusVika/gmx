<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="date_range_mapper">
    <select id="getById" resultMap="date_range_map">
        SELECT *
        FROM dateRanges
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="date_range_map">
        SELECT *
        FROM dateRanges
    </select>
    <delete id="deleteById">
        DELETE FROM dateRanges
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO dateRanges(dateStart, dateEnd)
        VALUES(#{dateStart}, #{dateEnd})
    </insert>
    <update id="update">
        UPDATE dateRanges
        SET dateStart=#{dateStart},
        dateEnd=#{dateEnd}
    </update>

    <resultMap id="date_range_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.DateRange"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="dateStart" column="dateStart"/>
        <result property="dateEnd" column="dateEnd"/>
    </resultMap>
</mapper>