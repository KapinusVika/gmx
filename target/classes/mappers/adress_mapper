<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adress_mapper">
    <select id="getById" resultMap="adress_map">
        SELECT *
        FROM adresses
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="adress_map">
        SELECT *
        FROM adresses
    </select>
    <delete id="deleteById">
        DELETE FROM adresses
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO adresses(city, street, build, apartment)
        VALUES (#{city}, #{street}, #{build}, #{apartment})
    </insert>
    <update id="update">
        UPDATE adresses
        SET city=#{city},
        street=#{street},
        build=#{build},
        apartment=#{apartment}
        WHERE id=#{id}
    </update>

    <resultMap id="adress_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Adress"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="city" column="city"/>
        <result property="street" column="street"/>
        <result property="build" column="build"/>
        <result property="apartment" column="apartment"/>
    </resultMap>
</mapper>