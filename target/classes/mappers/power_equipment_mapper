<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="power_equipment_mapper">
    <select id="getById" resultMap="power_equipment_map">
        SELECT *
        FROM powerEquipments
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="power_equipment_map">
        SELECT *
        FROM powerEquipments
    </select>
    <delete id="deleteById">
        DELETE FROM powerEquipments
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO powerEquipments(name, year, workingMuscle, maxWorkingWeight)
        VALUES(#{name}, #{year}, #{workingMuscle}, #{maxWorkingWeight})
    </insert>
    <update id="update">
        UPDATE powerEquipments
        SET name=#{name},
        year=#{year},
        workingMuscle=#{workingMuscle},
        maxWorkingWeight=#{maxWorkingWeight}
        WHERE id=#{id}
    </update>

    <resultMap id="power_equipment_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.PowerEquipment"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="year" column="year"/>
        <result property="workingMuscle" column="workingMuscle"/>
        <result property="maxWorkingWeight" column="maxWorkingWeight"/>
    </resultMap>
</mapper>