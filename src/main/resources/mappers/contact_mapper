<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="contact_mapper">
    <select id="getById" resultMap="contact_map">
        SELECT *
        FROM contacts
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="contact_map">
        SELECT *
        FROM contacts
    </select>
    <delete id="deleteById">
        DELETE FROM contacts
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO contacts(phoneNumber, instagram)
        VALUES(#{phoneNumber}, #{instagram})
    </insert>
    <update id="update">
        UPDATE contacts
        SET phoneNumber=#{phoneNumber},
        instagram=#{instagram}
    </update>

    <resultMap id="contact_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Contact"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="phoneNumber" column="phoneNumber"/>
        <result property="instagram" column="instagram"/>
    </resultMap>
</mapper>