<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="subscription_mapper">
    <select id="getById" resultMap="subscription_map">
        SELECT *
        FROM subscriptions
        LEFT JOIN adress
        ON adresses.id=subscriptions.adressId
        LEFT JOIN contact
        ON contacts.id=subscriptions.contactId
        LEFT JOIN pricePlan
        ON pricePlans.id=subscriptions.pricePlanId
        LEFT JOIN training
        ON trainings.id=subscriptions.trainingId
        WHERE subscriptions.id=#{id}
    </select>
    <select id="get" resultMap="author_map">
        SELECT *
        FROM subscriptions
        LEFT JOIN adress
        ON adresses.id=subscriptions.adressId
        LEFT JOIN contact
        ON contacts.id=subscriptions.contactId
        LEFT JOIN pricePlan
        ON pricePlans.id=subscriptions.pricePlanId
        LEFT JOIN training
        ON trainings.id=subscriptions.trainingId
    </select>
    <delete id="deleteById">
        DELETE FROM subscriptions
        WHERE subscriptions.id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO subscriptions(name)
        VALUES(#{name})
    </insert>
    <update id="update">
        UPDATE subscriptions
        SET name=#{name}
        WHERE subscriptions.id=#{id}
    </update>

    <resultMap id="subscription_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Subscription"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
</mapper>
