<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="client_mapper">
    <select id="getById" resultMap="client_map">
        SELECT *
        FROM clients
        LEFT JOIN contact
        ON contacts.Id = clients.contactId
        LEFT JOIN clients_subscriptions
        clients_subscriptions.clientId = clients.id
        LEFT JOIN subscription
        subscriptions.id = clients_subscriptions.subscriptionId
        LEFT JOIN clients_nutritionPrograms
        clients_nutritionPrograms.clientId = clients.id
        LEFT JOIN nutritionProgram
        nutritionPrograms.id = clients_subscriptions.nutritionProgramId
        LEFT JOIN clients_trainingPrograms
        clients_trainingPrograms.clientId = clients.id
        LEFT JOIN trainingProgram
        trainingPrograms.id = clients_subscriptions.trainingProgramId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="client_map">
        SELECT *
        FROM clients
        LEFT JOIN contact
        ON contacts.Id = clients.contactId
        LEFT JOIN clients_subscriptions
        clients_subscriptions.clientId = clients.id
        LEFT JOIN subscription
        subscriptions.id = clients_subscriptions.subscriptionId
        LEFT JOIN clients_nutritionPrograms
        clients_nutritionPrograms.clientId = clients.id
        LEFT JOIN nutritionProgram
        nutritionPrograms.id = clients_subscriptions.nutritionProgramId
        LEFT JOIN clients_trainingPrograms
        clients_trainingPrograms.clientId = clients.id
        LEFT JOIN trainingProgram
        trainingPrograms.id = clients_subscriptions.trainingProgramId
    </select>
    <delete id="deleteById">
        DELETE FROM clients
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO
    </insert>
    <update id="update">
        UPDATE adresses
        SET
    </update>

    <resultMap id="client_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Client"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="city" column="city"/>
        <result property="street" column="street"/>
        <result property="build" column="build"/>
        <result property="apartment" column="apartment"/>
    </resultMap>
