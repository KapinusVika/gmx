<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cardio_equipment_mapper">
    <select id="getById" resultMap="cardio_equipment_map">
        SELECT *
        FROM cardioEquipments
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="cardio_equipment_map">
        SELECT *
        FROM cardioEquipments
    </select>
    <delete id="deleteById">
        DELETE FROM cardioEquipments
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO cardioEquipments(name, year, maxWeight)
        VALUES(#{name}, #{year}, #{maxWeight})
    </insert>
    <update id="update">
        UPDATE cardioEquipments
        SET name=#{name},
        year=#{year},
        maxWeight=#{maxWeight}
        WHERE id=#{id}
    </update>

    <resultMap id="cardio_equipment_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.CardioEquipment"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="year" column="year"/>
        <result property="maxWeight" column="maxWeight"/>
    </resultMap>
</mapper>