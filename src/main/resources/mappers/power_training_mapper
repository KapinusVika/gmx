<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="power_training_mapper">
    <select id="getById" resultMap="power_training_map">
        SELECT *
        FROM powerTrainings
        LEFT JOIN trainer
        ON trainers.id=powerTrainings.trainerId
        LEFT JOIN client
        ON clients.id=powerTrainings.clientId
        LEFT JOIN powerTrainings_powerEquipments
        powerTrainings_powerEquipments.powerTrainingId = powerTrainings.id
        LEFT JOIN powerEquipment
        powerEquipments.id = powerTrainings_powerEquipments.powerEquipmentId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="power_training_map">
        SELECT *
        FROM powerTrainings
        LEFT JOIN trainer
        ON trainers.id=powerTrainings.trainerId
        LEFT JOIN client
        ON clients.id=powerTrainings.clientId
        LEFT JOIN powerTrainings_powerEquipments
        powerTrainings_powerEquipments.powerTrainingId = powerTrainings.id
        LEFT JOIN powerEquipment
        powerEquipments.id = powerTrainings_powerEquipments.powerEquipmentId
    </select>
    <delete id="deleteById">
        DELETE FROM powerTrainings
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO powerTrainings (name, workingWeight, trainerId, clientId)
        VALUES (#{name},  #{workingWeight}, #{trainerId},  #{clientId});
    </insert>
    <update id="update">
        UPDATE powerTraining
        SET name=#{name},
        workingWeight=#{workingWeight},
        trainerId=#{trainerId},
        clientId=#{clientId}
    </update>

    <resultMap id="power_training_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.PowerTraining"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="workingWeight" column="workingWeight"/>
        <collection property="trainer" column="trainerId" resultMap="trainer_mapper.trainer_map"/>
        <collection property="client" column="clientId" resultMap="client_mapper.client_map"/>
    </resultMap>
</mapper>