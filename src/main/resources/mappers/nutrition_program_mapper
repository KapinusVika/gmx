<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nutrition_program_mapper">
    <select id="getById" resultMap="nutrition_program_map">
        SELECT *
        FROM nutritionPrograms
        LEFT JOIN nutritionFacts
        ON nutritionFacts.Id = nutritionPrograms.nutritionFactsId
    </select>
    <select id="get" resultMap="nutrition_program_map">
        SELECT *
        FROM nutritionPrograms
        LEFT JOIN nutritionFacts
        ON nutritionFacts.Id = nutritionPrograms.nutritionFactsId
    </select>
    <delete id="deleteById">
        DELETE FROM nutritionPrograms
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO nutritionPrograms (nameDiet, excludedProducts, nutritionFactsId)
        VALUES (#{nameDiet}, #{excludedProducts}, #{nutritionFactsId})
    </insert>
    <update id="update">
        UPDATE nutritionPrograms
        SET nameDiet=#{nameDiet},
        excludedProducts=#{excludedProducts},
        nutritionFactsId=#{nutritionFactsId}
    </update>

    <resultMap id="nutrition_program_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.NutritionProgram"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="nameDiet" column="nameDiet"/>
        <result property="excludedProducts" column="excludedProducts"/>
        <collection property="nutritionFacts" column="nutritionFactsId"
                    resultMap="nutrition_facts_mapper.nutrition_facts_map"/>
    </resultMap>
</mapper>