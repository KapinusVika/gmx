<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cardio_training_mapper">
    <select id="getById" resultMap="cardio_training_map">
        SELECT *
        FROM cardioTrainings
        LEFT JOIN trainer
        ON trainers.id=cardioTrainings.trainerId
        LEFT JOIN client
        ON clients.id=cardioTrainings.clientId
        LEFT JOIN cardioTrainings_cardioEquipments
        cardioTrainings_cardioEquipments.cardioTrainingId = cardioTrainings.id
        LEFT JOIN cardioEquipments
        cardioEquipments.id = cardioTrainings_cardioEquipments.cardioEquipmentId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="cardio_training_map">
        SELECT *
        FROM cardioTrainings
        LEFT JOIN trainer
        ON trainers.id=cardioTrainings.trainerId
        LEFT JOIN client
        ON clients.id=cardioTrainings.clientId
        LEFT JOIN cardioTrainings_cardioEquipments
        cardioTrainings_cardioEquipments.cardioTrainingId = cardioTrainings.id
        LEFT JOIN cardioEquipments
        cardioEquipments.id = cardioTrainings_cardioEquipments.cardioEquipmentId
    </select>
    <delete id="deleteById">
        DELETE FROM cardioTrainings
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO cardioTrainings (name, duration, trainerId, clientId)
        VALUES (#{name},  #{duration}, #{trainerId},  #{clientId});
    </insert>

    <insert id="createRelatios">
        INSERT INTO cardioTrainings_cardioEquipments (cardioTrainingId, cardioEquipmentId)
        VALUES (#{cardioTrainingId}, #{cardioEquipmentId});
    </insert>
    <update id="update">
        INSERT INTO cardioTrainings
        SET name=#{name},
        duration=#{duration},
        trainerId=#{trainerId},
        clientId=#{clientId},
    </update>

    <resultMap id="cardio_training_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.CardioTraining"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="duration" column="duration"/>
        <collection property="trainer" column="trainerId" resultMap="trainer_mapper.trainer_map"/>
        <collection property="client" column="clientId" resultMap="client_mapper.client_map"/>
    </resultMap>
</mapper>
