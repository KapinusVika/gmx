<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="training_mapper">
    <select id="getById" resultMap="training_map">
        SELECT *
        FROM trainings
        LEFT JOIN trainer
        ON trainers.id=trainings.trainerId
        LEFT JOIN client
        ON clients.id=trainings.clientId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="training_map">
        SELECT *
        FROM trainings
    </select>
    <delete id="deleteById">
        DELETE FROM trainings
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO trainings (name)
        VALUES (#{name});

    </insert>
    <update id="update">
        UPDATE trainings
        SET name=#{name}
        WHERE id=#{id}
    </update>

    <resultMap id="training_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.Training"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="trainer" column="trainerId" resultMap="trainer_mapper.trainer_map"/>
        <collection property="client" column="clientId" resultMap="client_mapper.client_map"/>
    </resultMap>
</mapper>