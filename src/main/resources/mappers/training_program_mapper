<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="training_program_mapper">
    <select id="getById" resultMap="training_program_map">
        SELECT *
        FROM trainingPrograms
        LEFT JOIN cardioTraining
        ON cardioTrainings.id=trainingPrograms.cardioTrainingId
        LEFT JOIN powerTraining
        ON powerTrainings.id=trainingPrograms.powerTrainingId
        WHERE id=#{id}
    </select>
    <select id="get" resultMap="training_program_map">
        SELECT *
        FROM trainingPrograms
        LEFT JOIN cardioTraining
        ON cardioTrainings.id=trainingPrograms.cardioTrainingId
        LEFT JOIN powerTraining
        ON powerTrainings.id=trainingPrograms.powerTrainingId
    </select>
    <delete id="deleteById">
        DELETE FROM trainingPrograms
        WHERE id=#{id}
    </delete>
    <insert id="create">
        INSERT INTO (nameTraining, cardioTrainingId, powerTrainingId )
        VALUES(#{nameTraining}, #{cardioTrainingId}, #{powerTrainingId})
    </insert>
    <update id="update">
        UPDATE trainingPrograms
        SET nameTraining=#{nameTraining},
        cardioTrainingId=#{cardioTrainingId},
        powerTrainingId=#{powerTrainingId}
    </update>

    <resultMap id="training_program_map"
               type="com.java.automation.lab.fall.kapinus.core22.domain.TrainingProgram"
               autoMapping="false">
        <id property="id" column="id"/>
        <result property="nameTraining" column="nameTraining"/>
        <collection property="cardioTraining" column="cardioTrainingId"
                    resultMap="cardio_training_mapper.cardio_training_map"/>
        <collection property="powerTraining" column="powerTrainingId"
                    resultMap="power_training_mapper.power_training_map"/>
    </resultMap>
</mapper>